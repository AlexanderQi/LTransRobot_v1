<Window x:Class="LTransRobot_v1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LTransRobot_v1"
        mc:Ignorable="d"
        Title="LTransRobot_v1" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="544*"/>
            <RowDefinition Height="25*"/>
        </Grid.RowDefinitions>
        <TabControl x:Name="tabControl" Margin="0" Grid.RowSpan="1">
            <TabItem Header="文件">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="设置">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>

        </TabControl>
        <StatusBar Margin="0" Grid.Row="1"/>
    </Grid>
</Window>
